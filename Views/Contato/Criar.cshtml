@model  ContatoModel
@{
    ViewData["Title"] = "Criar de Contatos";
}


   
    <h1 class="display-4">Cadastar Contato</h1>
   <br />
   <br />

    <form asp-controller="Contato" asp-action="Criar" method="post">

        <div class="mb-3">
            <label for="nome" class="form-label">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Digite seu o nome">
            @Html.ValidationMessageFor(x => x.Nome)
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">E-mail</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="Digite seu o email">
        @Html.ValidationMessageFor(x => x.Email)
        </div>
        <div class="mb-3">
            <label for="numero" class="form-label">Numero</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite seu o numero">
        @Html.ValidationMessageFor(x => x.Celular)
        </div>

    <button type="submit" class="btn btn-primary w-100">Adicionar</button>

    <a class="btn btn-secondary w-100" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
    </form>
